{
  "tasks": [
    {
      "type": "shell",
      "label": "Build Debug (MSVC)",
      "command": "muuk",
      "args": [
        "build",
        "--compiler",
        "cl",
        "-p",
        "debug"
      ],
      "problemMatcher": [
        "$msCompile"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "statusbar": {
          "hide": false,
          "label": "Debug"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "revealProblems": "onProblem",
        "focus": false,
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "type": "shell",
      "label": "Build Release (MSVC)",
      "command": "muuk",
      "args": [
        "build",
        "-p",
        "release",
        "-c",
        "cl"
      ],
      "problemMatcher": [
        "$msCompile"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "options": {
        "statusbar": {
          "hide": false,
          "label": "Release"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "revealProblems": "onProblem",
        "focus": false,
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "type": "shell",
      "label": "Build Debug (GCC)",
      "command": "build/release/bin/muuk",
      "args": [
        "build",
        "--compiler",
        "gcc",
        "-p",
        "debug"
      ],
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "options": {
        "statusbar": {
          "hide": true,
          "label": "Debug"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "revealProblems": "onProblem",
        "focus": false,
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe build active file",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/nologo",
        "/std:c++20",
        "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
        "${file}"
      ],
      "options": {
        "cwd": "${fileDirname}",
        "statusbar": {
          "hide": true
        }
      },
      "problemMatcher": [
        "$msCompile"
      ],
      "detail": "Task generated by Debugger."
    },
  ],
  "version": "2.0.0"
}