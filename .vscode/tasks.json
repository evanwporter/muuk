{
  "tasks": [
    {
      "type": "shell",
      "label": "Build Debug (MSVC)",
      "command": "bin",
      "args": [
        "build",
        // "--release",
        "-c",
        "cl"
      ],
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "options": {
        "statusbar": {
          "hide": false,
          "label": "Debug"
        }
      }
    },
    {
      "type": "shell",
      "label": "Build Release (MSVC)",
      "command": "muuk",
      "args": ["build", "--compiler", "cl", "--release"],
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "statusbar": {
          "hide": false,
          "label": "Release"
        }
      }
    },
    {
      "type": "shell",
      "label": "Build Muuk Debug (GCC)",
      "command": "build/release/bin/muuk",
      "args": [
        "build"
        // "--release",
      ],
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "options": {
        "statusbar": {
          "hide": true
        }
      }
    },
    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe build active file",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/nologo",
        "/std:c++20",
        "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
        "${file}"
      ],
      "options": {
        "cwd": "${fileDirname}",
        "statusbar": {
          "hide": true
        }
      },
      "problemMatcher": ["$msCompile"],
      "detail": "Task generated by Debugger."
    }
